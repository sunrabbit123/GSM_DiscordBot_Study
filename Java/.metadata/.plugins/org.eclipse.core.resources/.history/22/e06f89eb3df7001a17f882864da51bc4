public class Main {
	
	final static String token = "NzAwNjExMzg0OTk5NjczOTM2.XpldMg.EZ5a6LC0pdftpCdq2fH1ePyHl94";
	
    public static void main(String[] args) {
        DiscordApi api = new DiscordApiBuilder()
